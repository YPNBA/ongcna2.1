    <title>Home</title>
    <style>
        .article {
          --img-scale: 1.001;
          --title-color: black;
          --link-icon-translate: -20px;
          --link-icon-opacity: 0;
        }
      
        .article {
          @apply relative overflow-hidden rounded-lg shadow-md bg-white transform-gpu transform-origin-center transition-transform duration-300 ease-in-out hover:scale-105;
        }
      
        .article a::after {
          @apply absolute inset-0 cursor-pointer content-empty;
        }
      
        .article h2 {
          @apply m-0 mb-3 text-2xl font-bold text-black transition-color duration-300 ease-out;
          color: var(--title-color);
        }
      
        figure {
          @apply m-0 p-0 aspect-w-16 aspect-h-9 overflow-hidden;
        }
      
        .article img {
          @apply w-full h-full object-cover transform-origin-center transition-transform duration-300 ease-in-out transform scale-100 hover:scale-110;
        }
      
        .article-body {
          @apply p-4;
        }
      
        .article a {
          @apply inline-flex items-center no-underline text-blue-500 hover:underline;
        }
      
        .article a .icon {
          @apply w-5 h-5 ml-2 opacity-75 transform transition-transform duration-300;
        }
      
        .article:hover,
        .article:focus {
          --img-scale: 1.1;
          --title-color: #28666e;
        }
      
        .sr-only:not(:focus):not(:active) {
          @apply sr-only;
        }
                          #resultats-flottants {
                      background-color: rgba(0, 0, 0, 0.5); /* Fond semi-transparent pour l'arri√®re-plan de la carte flottante */
                    }
      </style>
      
</head>